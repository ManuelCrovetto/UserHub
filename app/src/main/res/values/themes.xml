<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.UserHub" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>

    </style>

    <style name="MaterialCircularImageView">
        <item name="cornerSize">50%</item>
    </style>

    <style name="Headline">
        <item name="fontFamily">@font/opensans_bold</item>
        <item name="android:textSize">17sp</item>
        <item name="lineHeight">22dp</item>
        <item name="singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="maxLines">1</item>
    </style>

    <style name="Body">
        <item name="fontFamily">@font/opensans_regular</item>
        <item name="lineHeight">22sp</item>
        <item name="android:textSize">14sp</item>
        <item name="singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="maxLines">1</item>
    </style>

    <style name="Caption_2">
        <item name="fontFamily">@font/opensans_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="lineHeight">14dp</item>
        <item name="android:letterSpacing">0.1</item>
    </style>
</resources>